label = %date% %time%
label-font = 2

[module/spotify]
type = custom/script
exec-if = ~/.config/polybar/spotify.sh --title
exec = ~/.config/polybar/spotify.sh --title
click-left = ~/.config/polybar/spotify.sh --togglePlay
click-right = i3-msg workspace 4
interval = 0.5
format= <label>
label = %output:0:50:...%
label-font = 2

